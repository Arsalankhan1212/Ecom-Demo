<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/_12sdp">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_close"
        android:layout_gravity="end"
        app:tint="@color/color_black_only"
        android:background="@drawable/bg_gray_oval_icon"
        android:padding="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:contentDescription="@string/app_name"/>

  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:layout_marginTop="@dimen/_6sdp"
      android:gravity="center">
      <ImageView
          android:id="@+id/imgError"
          android:layout_width="@dimen/_140sdp"
          android:layout_height="@dimen/_140sdp"
          android:src="@drawable/ic_error"
          android:scaleType="centerCrop"
          android:layout_gravity="center"
          android:contentDescription="@string/app_name"/>

      <TextView
          android:id="@+id/tvErrorMsg"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/app_name"
          android:textSize="@dimen/_14ssp"
          android:layout_gravity="center"
          android:fontFamily="@font/font_manrope_medium"
          android:textColor="@color/black"
          android:gravity="center"
          />

      <TextView
          android:id="@+id/btnRefresh"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/str_refresh"
          android:padding="@dimen/_8sdp"
          android:layout_gravity="center"
          android:textColor="@color/color_black_only"
          android:textSize="@dimen/_12ssp"
          android:layout_marginTop="@dimen/_20sdp"
          android:drawablePadding="@dimen/_4sdp"
          android:fontFamily="@font/font_manrope_medium"
          android:background="@drawable/bg_gray_button"
          app:drawableStartCompat="@drawable/ic_refresh" />

  </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>